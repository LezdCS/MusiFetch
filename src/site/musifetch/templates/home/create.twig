{% load static %}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Create</title>
    <link rel="stylesheet" type="text/css" href="{% static 'css/home/create.css' %}">
    <link rel="stylesheet" href="{% static 'bs/css/bootstrap.css' %}">
    <link rel="stylesheet" href="{% static 'bs/css/bootstrap.min.css' %}">
    <link rel="icon" href="{% static 'img/favicon.png'%}">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="#">MusiFetch</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
            <div class="navbar-nav">
                <a class="nav-item nav-link active" href="/home">Home <span class="sr-only">(current)</span></a>
            </div>
        </div>
    </nav>
    <div id="main">
        <div class="container">
            <form class="search-bar" action="/create/" method="post">
                {% csrf_token %}
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="typeLink" id="videoLink" value="videoLink" checked>
                    <label class="form-check-label" for="videoLink">
                        Youtube video URL
                    </label>
                </div>
                <div class="form-check">
                    <input class="form-check-input" type="radio" name="typeLink" id="playlistLink" value="playlistLink">
                    <label class="form-check-label" for="playlistLink">
                        Youtube Playlist URL
                    </label>
                </div>
                <br>
                <div class="form-group">
                    <label>
                        <input id="link" class="form-control" name="link" class="input-search" type="text" placeholder="Insert the link here" onclick="this.placeholder='';">
                    </label>
                </div>
                <input type="submit" value="Create" class="btn btn-primary">
            </form>
        </div>
    </div>
</body>
</html>